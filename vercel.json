{
  "version": 2,
  "builds": [
    {
      "src": "api/research.py",
      "use": "@vercel/python",
      "config": {
         "maxLambdaSize": "50mb"
       }
    }
  ],
  "routes": [
    {
      "src": "/api/research",
      "dest": "api/research.py"
    },
    {
       "src": "/(.*)",
       "dest": "/index.html"
     }
  ],
   "env": {
     "FIREWORKS_API_KEY": "FIREWORKS_API_KEY",
     "PERPLEXITY_API_KEY": "PERPLEXITY_API_KEY"
     // Add other environment variable names here if needed
   }
}
